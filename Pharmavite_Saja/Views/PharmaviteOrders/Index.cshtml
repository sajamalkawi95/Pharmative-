@model IEnumerable<Pharmavite_Saja.Models.PharmaviteOrder>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<div class="col-md-10 d-block m-auto">
    <div class="card">
        <div class="card-header">
            <h1> Add Product </h1>
        </div>
        <div class="card-body">
            <form asp-action="OrdersInRang">
                <div class="row">
                    <div class="col">
                        <label>Start Date</label>
                        <input type="date" name="start" />
                    </div>
                    <div class="col">
                        <label>End Date</label>
                        <input type="date" name="end" />
                    </div>
                    <div class="col">
                        <input type="submit" value="Search" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="col-lg-12 d-block m-auto">
    <div class="card">
        <div class="card-header">
            <h1> Result search </h1>
        </div>
        <div class="card-body">
            <div class="col-11 m-auto">
                @{

                    @if (Model.Count() <= 0)
                    {
                        <p> No Orders in this period</p>
                    }
                    else
                    {
                        <div class="row">
                            <div>
                                <h1>Orders</h1>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ProductQty)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ProductStatus)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.OrderStartDate)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.DeleverdDate)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.UserIdfkNavigation)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ProductQty)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ProductStatus)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.OrderStartDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DeleverdDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.UserIdfkNavigation.UserId)
                                                </td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                                                    <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                                                    <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
