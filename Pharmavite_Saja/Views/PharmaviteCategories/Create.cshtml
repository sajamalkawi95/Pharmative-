@model Pharmavite_Saja.Models.PharmaviteCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<div class="row">
    <div class="col-md-8 d-block m-auto">
        <div class="card">
            <div class="card-header">
                <h5 class="title">Add Employee</h5>
            </div>
            <div class="card-body">
                <form asp-controller="PharmaviteCategories" asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div >
                        <input asp-for="ImageFile" type="file" name="ImageFile" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryName" class="form-control badge-secondary" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>

                </form>
            </div>
        </div>

        <div>
            <a asp-controller="Dashbord" asp-action="Index">Back to Dashbord</a>
        </div>
    </div>
</div>