@model IEnumerable<Pharmavite_Saja.Models.PharmaviteProductCart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderIdfkNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductIdfkNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderIdfkNavigation.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductIdfkNavigation.ProductId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductCartId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductCartId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductCartId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
